<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--    <ImageView-->
    <!--        android:id="@+id/img"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent"-->
    <!--        android:src="@drawable/demo"-->
    <!--        android:scaleType="fitXY"-->
    <!--        >-->

    <!--    </ImageView>-->
    <RelativeLayout
        android:id="@+id/ll_top1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/personal_head_bg"
        android:orientation="horizontal"
        android:padding="@dimen/dp15"
        >
        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/avatar2"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginLeft="@dimen/dp10"
            />
        <LinearLayout

            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_toRightOf="@+id/iv_avatar"
            android:layout_marginTop="@dimen/dp10"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/name" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp5"
                    android:text="姓名："
                    android:textSize="@dimen/sp16"
                    />
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp5"
                    android:gravity="right"
                    android:text="name"
                    android:textSize="@dimen/sp16"
                    android:layout_marginRight="@dimen/dp5"
                    android:textColor="@color/textColor"

                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/account2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp5"
                    android:text="ID："
                    android:textSize="@dimen/sp16" />
                <TextView
                    android:id="@+id/tv_account"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp5"
                    android:gravity="right"
                    android:text="id"
                    android:textSize="@dimen/sp16"
                    android:layout_marginRight="@dimen/dp5"
                    android:textColor="@color/textColor"

                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/iv_avatar"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp10"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/clock" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp5"
                android:text="上次登录时间："
                android:textSize="@dimen/sp16" />
            <TextView
                android:id="@+id/tv_logintime"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp5"
                android:gravity="right"
                android:text="id"
                android:textSize="@dimen/sp16"
                android:layout_marginRight="@dimen/dp5"
                android:textColor="@color/textColor"

                />
        </LinearLayout>

    </RelativeLayout>





    <LinearLayout
        android:id="@+id/ll_top2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_top1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:padding="@dimen/dp15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="个人设置"
            android:textColor="@color/textColor"
            android:textSize="@dimen/sp16"
            android:textStyle="bold"

            />

        <LinearLayout
            android:id="@+id/ll_font"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/font" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp5"
                android:text="字体选择"
                android:textSize="@dimen/sp16"
                />
            <TextView
                android:id="@+id/tv_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="常规"
                android:textSize="@dimen/sp16"
                android:layout_marginRight="@dimen/dp5"
                android:textColor="@color/textColor"

                />
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/right_arrow_black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"

            >

            <ImageView
                android:id="@+id/iv_pwd"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/change_pwd" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp5"
                android:text="修改密码"
                android:textSize="@dimen/sp16"
                />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/right_arrow_black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"

            >

            <ImageView
                android:id="@+id/iv_mode"
                android:layout_width="25dp"
                android:layout_height="25dp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp5"
                android:text="模式："
                android:textSize="@dimen/sp16"
                />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/right_arrow_black" />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_above="@+id/tv_login_out"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp20"
        android:paddingLeft="100dp"
        >
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            />
        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp5"
            android:text="版本："
            android:textSize="@dimen/sp16" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_login_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/shape_radis_8_accent"
        android:gravity="center"
        android:padding="10dp"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="20sp"

        >

    </TextView>

</RelativeLayout>