<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/activity_common_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/ll_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp3"
                    android:orientation="vertical"
                    android:padding="@dimen/dp5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_no"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="工单编号"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/sp14" />

                        <TextView
                            android:id="@+id/tv_statue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:paddingRight="@dimen/dp5"
                            android:text="状态："
                            android:textColor="@color/grenn"
                            android:textSize="@dimen/sp14" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="描述"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/sp14" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="订单描述:"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/sp14" />

                        <TextView
                            android:id="@+id/tv_order_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="qqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqq"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/sp14" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_state_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="状态日期"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/sp14" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp3"
                    android:orientation="vertical"
                    android:padding="@dimen/dp5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp5">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_marginLeft="@dimen/dp10"
                            android:layout_marginRight="@dimen/dp10"
                            android:layout_weight="1"
                            android:background="@color/gry33"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="详细信息"
                            android:textColor="@color/grenn"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_marginLeft="@dimen/dp10"
                            android:layout_marginRight="@dimen/dp10"
                            android:layout_weight="1"
                            android:background="@color/gry33"

                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_purchaser"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="采购员"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/sp14" />

                        <TextView
                            android:id="@+id/tv_money"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="货币"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/sp14" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_receive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="接收情况"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/sp14" />

                    <TextView
                        android:id="@+id/tv_vender_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="供应商描述"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/sp14"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/tv_end_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp3"
                            android:layout_weight="1"
                            android:text="到期日期"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/sp14" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_pay_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp3"
                        android:maxLines="1"
                        android:text="交货日期"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/sp14" />

                    <TextView
                        android:id="@+id/tv_price_with_tax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp3"
                        android:maxLines="1"
                        android:text="含税总价"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/sp14" />

                    <TextView
                        android:id="@+id/tv_price_without_tax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp3"
                        android:text="不含税总价"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/sp14" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_price_tax"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp3"
                            android:layout_weight="1"
                            android:text="总税金"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/sp14" />

                        <TextView
                            android:id="@+id/tv_tax_quota"
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp3"
                            android:layout_weight="1"
                            android:text="税额"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/sp14" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp5"
                    android:background="@color/white" />

                <LinearLayout
                    android:id="@+id/ll_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp3"
                    android:orientation="vertical"
                    android:padding="@dimen/dp5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp5">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_marginLeft="@dimen/dp10"
                            android:layout_marginRight="@dimen/dp10"
                            android:layout_weight="1"
                            android:background="@color/gry33" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="供应商"
                            android:textColor="@color/orange"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_marginLeft="@dimen/dp10"
                            android:layout_marginRight="@dimen/dp10"
                            android:layout_weight="1"
                            android:background="@color/gry33"

                            />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="公司"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/sp14" />

                    <TextView
                        android:id="@+id/tv_way"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="发运方式"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/sp14" />

                    <!--                    <TextView-->
                    <!--                        android:id="@+id/tv_vender_desc"-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:text="供应商描述"-->
                    <!--                        android:textColor="@color/textColor"-->
                    <!--                        android:textSize="@dimen/sp14"-->
                    <!--                        android:visibility="gone" />-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp3"
                            android:layout_weight="1"
                            android:text="价格基准"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/sp14" />

                        <TextView
                            android:id="@+id/tv_pay"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp3"
                            android:layout_weight="1"
                            android:maxLines="1"
                            android:text="付款方式"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/sp14"

                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp15"
                            android:layout_height="@dimen/dp15"
                            android:src="@drawable/clock" />

                        <TextView
                            android:id="@+id/tv_change_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp3"
                            android:layout_weight="1"
                            android:maxLines="1"
                            android:text="制单日期"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/sp14" />

                        <ImageView
                            android:layout_width="@dimen/dp18"
                            android:layout_height="@dimen/dp18"
                            android:src="@drawable/name" />

                        <TextView
                            android:id="@+id/tv_change_by"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp3"
                            android:layout_weight="1"
                            android:text="制单人"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/sp14"

                            />
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <net.lucode.hackware.magicindicator.MagicIndicator
                android:id="@+id/magicIndicator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:background="@color/white" />

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="500dp" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>