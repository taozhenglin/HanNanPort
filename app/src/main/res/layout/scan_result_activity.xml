<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gry33"
    android:orientation="vertical">


    <include layout="@layout/activity_common_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp8"
                android:layout_marginTop="@dimen/dp10"
                android:padding="@dimen/dp8"
                android:translationZ="5dp"
                app:cardCornerRadius="@dimen/dp5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dp10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp15"
                        android:paddingRight="@dimen/dp15"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginRight="@dimen/dp8"
                            android:layout_height="1dp"
                            android:background="@color/grenn" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:text="设备详情"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/sp18" />

                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="1dp"
                            android:layout_marginLeft="@dimen/dp8"
                            android:background="@color/grenn" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5"
                        android:text="设备名称"
                        android:textColor="@color/tab_unchecked"
                        android:textSize="@dimen/sp16" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5"
                        android:text=""
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/sp18" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_marginBottom="@dimen/dp5"
                        android:background="@color/gry33" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5"
                        android:text="设备编号"
                        android:textColor="@color/tab_unchecked"
                        android:textSize="@dimen/sp16" />

                    <TextView
                        android:id="@+id/tv_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5"
                        android:text=""
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/sp18" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_marginBottom="@dimen/dp5"
                        android:background="@color/gry33" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5"
                        android:text="设备级别"
                        android:textColor="@color/tab_unchecked"

                        android:textSize="@dimen/sp16" />

                    <TextView
                        android:id="@+id/tv_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5"
                        android:text=""
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/sp18" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_marginBottom="@dimen/dp5"
                        android:background="@color/gry33" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5"
                        android:text="设备类型"
                        android:textColor="@color/tab_unchecked"

                        android:textSize="@dimen/sp16" />

                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5"
                        android:text=""
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/sp18" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_marginBottom="@dimen/dp5"
                        android:background="@color/gry33" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5"
                        android:text="设备位置"
                        android:textColor="@color/tab_unchecked"
                        android:textSize="@dimen/sp16"

                        />

                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5"
                        android:drawableLeft="@drawable/location"
                        android:text=""
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/sp18"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_marginBottom="@dimen/dp5"
                        android:background="@color/gry33"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5"
                        android:text="当前位置"
                        android:textColor="@color/tab_unchecked"
                        android:textSize="@dimen/sp16"

                        />

                    <TextView
                        android:id="@+id/tv_current_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5"
                        android:drawableLeft="@drawable/location"
                        android:text=" "
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/sp18"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5"
                        android:text="创建人"
                        android:textColor="@color/tab_unchecked"
                        android:textSize="@dimen/sp16"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_created_by"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5"
                        android:gravity="center_vertical"
                        android:text="杜兰特"

                        android:textColor="@color/textColor"
                        android:textSize="@dimen/sp18"
                        android:visibility="gone" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_marginBottom="@dimen/dp5"
                        android:background="@color/gry33"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5"
                        android:text="创建时间"
                        android:textColor="@color/tab_unchecked"
                        android:textSize="@dimen/sp16"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_created_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_marginBottom="@dimen/dp5"
                        android:gravity="center_vertical"
                        android:text="2021/06/21 14:52"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/sp18"
                        android:visibility="gone" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp8"
                android:padding="@dimen/dp8"
                android:translationZ="5dp"
                app:cardCornerRadius="@dimen/dp5">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dp10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp15"
                    android:paddingLeft="@dimen/dp15"
                    android:paddingRight="@dimen/dp15"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/dp8"
                        android:layout_height="1dp"
                        android:background="@color/grenn" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:text="巡检明细行"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/sp18" />

                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/dp8"
                        android:background="@color/grenn" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:padding="@dimen/dp5" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dp10"
                    android:visibility="gone">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp5"
                            android:text="巡检记录"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/sp18" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_1"
                            android:layout_marginTop="@dimen/dp5"
                            android:text="请巡检人员按要求认真检查"
                            android:textColor="@color/tab_unchecked"
                            android:textSize="@dimen/sp16" />

                        <TextView
                            android:id="@+id/tv_xj"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp10"
                            android:background="@drawable/blue_shape_20"
                            android:text="填写"
                            android:textColor="@color/white" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_marginBottom="@dimen/dp5"
                        android:background="@color/gry33" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp5"
                            android:text="维修记录"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/sp18" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_2"
                            android:layout_marginTop="@dimen/dp5"
                            android:text="请维修人员填写维修结果和内容"
                            android:textColor="@color/tab_unchecked"
                            android:textSize="@dimen/sp16" />

                        <TextView
                            android:id="@+id/tv_repair"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp10"
                            android:background="@drawable/blue_shape_20"
                            android:text="填写"
                            android:textColor="@color/white" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_marginBottom="@dimen/dp5"
                        android:background="@color/gry33" />
                </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp8"
                android:layout_marginTop="@dimen/dp10"
                android:padding="@dimen/dp8"
                android:translationZ="5dp"
                app:cardCornerRadius="@dimen/dp5">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dp10">


                    <TextView
                        android:id="@+id/tv_load"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="请上传故障图片:"
                        android:textSize="@dimen/sp14" />

                    <cn.bingoogolapple.photopicker.widget.BGASortableNinePhotoLayout
                        android:id="@+id/snpl_moment_add_photos"
                        style="@style/WrapWrap"
                        android:layout_margin="10dp"
                        app:bga_snpl_deleteDrawable="@mipmap/bga_pp_ic_delete"
                        app:bga_snpl_deleteDrawableOverlapQuarter="false"
                        app:bga_snpl_editable="true"
                        app:bga_snpl_itemCornerRadius="0dp"
                        app:bga_snpl_itemSpanCount="3"
                        app:bga_snpl_itemWhiteSpacing="4dp"
                        app:bga_snpl_itemWidth="0dp"
                        app:bga_snpl_maxItemCount="9"
                        app:bga_snpl_otherWhiteSpacing="50dp"
                        app:bga_snpl_placeholderDrawable="@mipmap/bga_pp_ic_holder_light"
                        app:bga_snpl_plusDrawable="@mipmap/bga_pp_ic_plus"
                        app:bga_snpl_plusEnable="true"
                        app:bga_snpl_sortable="true"
                        tools:ignore="MissingClass" />

                    <com.cn.hainanproject.view.MyGridView
                        android:layout_marginTop="@dimen/dp10"
                        android:id="@+id/gridview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:horizontalSpacing="8dp"
                        android:numColumns="3"
                        android:verticalSpacing="18dp"
                        android:visibility="gone"
                        />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请描述故障现象:"
                    android:textSize="@dimen/sp14" />

                    <EditText
                        android:id="@+id/edt_desc"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp100"
                        android:text=""
                        android:textSize="@dimen/sp14"
                        android:hint="请认真、详细填写故障描述"
                        android:layout_marginTop="@dimen/dp10"
                        android:padding="@dimen/dp5"
                        android:background="@drawable/shape_radis_8_white"

                        />
                </LinearLayout>




            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/tv_commit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50"
                android:background="@drawable/shape_radis_30_accent"
                android:text="提 交"
                android:textColor="@color/white"
                android:textSize="@dimen/sp16"

                />


        </LinearLayout>

    </ScrollView>


</LinearLayout>